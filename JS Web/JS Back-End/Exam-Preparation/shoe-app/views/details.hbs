
    <main>
        <div class="offer-details">
            <h1>{{shoe.brand}} {{shoe.name}}</h1>
            <div class="info">
                <img src="{{shoe.imageUrl}}"
                    alt="">
                <div class="description">{{shoe.description}}
                    <br>
                    <br>
                    <p> <strong>Buyers:</strong>{{shoe.buyers.length}}</p>
                    <br>
                    <p class="price">${{shoe.price}}</p>
                </div>
            </div>
            <div class="actions">
                {{#unless isNotCreator}}
                <a href="/edit/{{shoe._id}}">Edit</a>
                <a href="/delete/{{shoe._id}}">Delete</a>
                {{/unless}}

                {{#if showBuy}}
                <a href="/buy/{{shoe._id}}">Buy</a>
                {{/if}}
                <!-- <span>You bought it</span> -->
            </div>
        </div>
    </main>